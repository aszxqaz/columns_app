{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "verbose": true,
  "silent": false,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/prisma/",
    "/db/",
    "/dist/",
    "/coverage/"
  ]
}
